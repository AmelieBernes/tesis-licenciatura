% logo path
\def\@logopath{None}
\newcommand{\setlogo}[1]{\def\@logopath{#1}}


% url
\def\@authorurl{None}
\newcommand{\setauthorurl}[1]{\def\@authorurl{#1}}

% lugar
\def\@lugar{None}
\newcommand{\setlugar}[1]{\def\@lugar{#1}}

% email
\def\@authoremail{None}
\newcommand{\setauthoremail}[1]{\def\@authoremail{#1}}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.7\paperwidth} %Columna para los datos
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}  
        \usebeamercolor{place in headline}{\color{fg}\large{\@lugar}\\[1ex]}
        
       
      \end{column}
      \begin{column}{.25\paperwidth} %Columna para el logo
        \vskip8ex
        \begin{center}
          \includegraphics[width=.6\linewidth]{\@logopath}
        \end{center}
        \vskip2ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    
    \vskip2ex
    \hspace{0.1\paperwidth} \texttt{\@authorurl} 
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}



