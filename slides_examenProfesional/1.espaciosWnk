\pause
\[
\Omega_{n, \cali{P}}: \IR[t] \longrightarrow \IR^{n}
\]
es un operador lineal.

\end{frame}


\begin{frame}{Propiedad importante de $\Omega_{n, \cali{P}}$}
La siguiente consecuencia directa del Teorema
fundamental del Álgebra juega un papel fundamental
en el desarrollo de la teoría.



\begin{prop}
Sean $n \geq 2$ entero y $\cali{P}$ una malla uniforme de $n$ puntos.
Si $f(t) \in \IR[t]$ es un polinomio de grado menor a $n$ 
y $\Omega_{n, \cali{P}}(f)$ es el vector cero de $\IR^{n}$, entonces 
$f$ es el polinomio cero.
\end{prop}

\begin{center}
\textcolor{red}{\[
\forall n\geq 2, 
\forall \cali{P} = \{ t_{j} \}_{j=0}^{n-1},
 \forall f \in \IR[t]:
\]}

\textcolor{red}{
\[
\partial(f) \leq n \hspace{0.1cm} \land \hspace{0.1cm} \Omega_{n, \cali{P}} = 0
\Rightarrow f = 0.
\]
}
\end{center}

\end{frame}


\subsection{Espacios $W_{n,k}$}

\begin{frame}{Definición de los espacios de polinomios discretos}
Sea $n \geq 2$ entero.
Si $\cali{P}_{n} := \{ 0, \ldots , n-1 \}$ y
\[
\forall \hspace{0.1cm} 0 \leq k \leq n-1:
\hspace{0.2cm} f_{k}(t) := t^{k} \textit{ y }
v_{k} = \Omega_{n, \cali{P}_{n}}(f_{k}) = (j^{k})_{j=0}^{n-1},
\]
Definimos, para toda $0 \leq i \leq n-1$,
\begin{equation}
\label{eq: espacio Wni}
W_{n, i} := span \{ v_{k}: \hspace{0.2cm} 0 \leq k \leq i \} \leq \IR^{n}.
\end{equation}
\end{frame}





\begin{frame}{Usando el operador $\Omega_{n, \cali{P}}$ para reformular 
propiedades geométricas}

Sea $x = (x_{m})_{m=0}^{n-1} \in \IR^{n}$.
\begin{align*}
x \textit{ es afín }  \Leftrightarrow &
x = (a + bi)_{i=0}^{i} \hspace{0.2cm} \textit{ para algunos } a, b \in \IR \\
\Leftrightarrow & x = \Omega_{n, \cali{P}_{n}}(l(t)) \textit{ para alguna } l(t) = a+bt \in \IR_{1}[t] \\
\Leftrightarrow & x = a w_{0} + bw_{1} \\
\Leftrightarrow & x \in W_{n, 1}.
\end{align*}
Análogamente
\begin{center}
$x$ es constante sii $x \in W_{n,0}$
\end{center}
y
\begin{center}
$x$ es cuadrática sii $x \in W_{n,2}$ y $x \not\in W_{n,1}$.
\end{center}

\end{frame}





\begin{frame}{Propiedades importantes de los espacios $W_{n,k}$}
\begin{prop}
		Sea $n \geq 2$ entero. 
		Para cada $0 \leq k \leq n-1$ entero, sea $W_{n,k} \leq \IR^{n}$
		el espacio definido en \eqref{eq: espacio Wni}.
		\begin{itemize}
		\item $dim(W_{n,k}) = k+1$, \pause 
		\item $\forall 0 \leq i \leq n-2$: $W_{n, i} \subseteq W_{n, i+1}$,
		\pause
		\item $\IR^{n} = W_{n, n-1}$
		\pause
		\item Sea $\cali{P}$ una malla uniforme de $n$
		puntos. Para toda señal $x \in \IR^{n}$ 
		y toda $0 \leq i \leq n-1$, $x \in W_{n,i}$
		si y sólo si existe un polinomio $g(x)$ de grado a lo más 
		$i$ tal que $x = \Omega_{n, \cali{P}}(g)$.
		\end{itemize}
\end{prop}
\pause
Este resultado implica que
\textcolor{red}{toda señal $n-$dimensional sea la discretización
puntual uniforme de un polinomio de grado a lo más $n$}.
\end{frame}



\begin{frame}

La \textbf{pertenencia} 
de una señal finita $n-$dimensional
a un subespacio  $W_{n,k}$ de $\IR^{n}$
determina la \textbf{forma} de su gráfica.

