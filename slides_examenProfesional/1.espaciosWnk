\begin{frame}
\textbf{Pregunta:}
¿Se pueden encontrar dos mallas $\cali{P}$ y $\tilde{\cali{P}}$
y dos polinomios $f, \tilde{f}$ de grados
$0 \leq \partial(f) < \partial(\tilde{f}) \leq n-1$
tales que
\[
\Omega_{n, \cali{P}}(f) = x = \Omega_{n, \tilde{\cali{P}}}(\tilde{f}) ?
\]
\pause
\textbf{Respuesta:} no.

\begin{prop}
Sean 
$n \geq 2$, $x \in \IR^{n}$. 
Si $\cali{P}$ y $\tilde{\cali{P}}$
son mallas uniformes de $n$ puntos y $f, \tilde{f} \in \IR_{n-1}[t]$ 
son tales que 
\[
\Omega_{n, \cali{P}}(f) = x = \Omega_{n, \tilde{\cali{P}}}(\tilde{f}),
\]
entonces $\partial(f) = \partial(\tilde{f})$.
\end{prop}
\pause
\begin{defi}
Sean $n \geq 2$ y $x \in \IR^{n}$. Si $f \in \IR_{n-1}[t]$
y $\cali{P}$ son tales que
$x = \Omega_{n, \cali{P}}(f)$, entonces
\[
\partial(x) := \partial(f).
\hspace{0.2cm} (\textcolor{red}{\textit{grado}} \textit{ de } x).
\]
\end{defi} 
\end{frame}





\begin{frame}{Así, $W_{n,k}$ es el espacio de las señales $n-$dimensionales de grado $k$}
\begin{teo}
Sean $n \geq 2$ y $x \in \IR^{n}$.
\begin{itemize}
\item $x$ tiene grado cero sii $x \in W_{n,0}$, y
\item para toda $1 \leq i \leq n-1$, $x$ tiene grado $i$ sii
$x \in W_{n,i}$ pero $x \not\in W_{n, i-1}$.
\end{itemize}
\end{teo}
\pause
Luego, si $x \in \IR^{n}$, 
\begin{itemize}
	\item la gráfica de $x$ tiene la forma de un polinomio de
	grado a lo más $k \leq n-1$ si y sólo si $x \in W_{n,k}$.
	\item Es posible medir la distancia del punto
	$x \in \IR^{n}$ a espacios $W_{n,k} \leq \IR^{n}$, 
	luego, \textbf{podemos medir qué tanto se aleja
	$x$ de ser de cierto grado}. \TODO{Cuidado: corrigiendo.}
\end{itemize}
\end{frame}